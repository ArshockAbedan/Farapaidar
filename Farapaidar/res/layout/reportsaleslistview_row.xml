<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#70FFFF4D"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtSecond"
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.02"
            android:gravity="right|center"
            android:text="Second"
            android:textDirection="rtl"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtIDName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="شماره درخواست : " />

        <TextView
            android:id="@+id/txtFirst"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.00"
            android:gravity="right"
            android:text="First"
            android:textAlignment="0"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="bold" >

        </TextView>

    </LinearLayout>
    
    
        
     <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal"  >
        
         <TextView
             android:id="@+id/txtThird"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginRight="10dp"
             android:layout_weight="0.01"
             android:gravity="right|center_vertical"
             android:text="Third"
             android:textAlignment="0"
             android:textDirection="rtl"
             android:textSize="16sp"
             android:textStyle="bold" />
  
 <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:text="عنوان مشتری : " />
       

    </LinearLayout>
    
     
      <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal"  >
 
           <TextView
              android:id="@+id/txtFifth"
              android:layout_width="84dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="5dp"
              android:gravity="right"
              android:singleLine="true"
              android:text="Fifth" />

          <TextView
              android:id="@+id/CountUnitName"
              android:layout_width="90dp"
              android:layout_height="fill_parent"
              android:layout_marginRight="5dp"
              android:gravity="right|center_vertical"
              android:text="تعداد : "
              android:textDirection="rtl"
              android:textSize="16sp" />
        
         <TextView
             android:id="@+id/txtFourth"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginRight="10dp"
             android:gravity="right|center_vertical"
             android:text="Fourth"
             android:textAlignment="0"
             android:textDirection="rtl"
             android:textSize="16sp"
             android:layout_weight="0.01"
             android:textStyle="bold" />
       

    </LinearLayout>

      <LinearLayout
          android:id="@+id/linearLayout5"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layoutDirection="rtl"
          android:orientation="horizontal" >
         
          
           <TextView
          android:id="@+id/RialName"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="5dp"
          android:gravity="right"
          android:text="ریال"
          android:textDirection="rtl"
          android:textSize="16sp" />
        
         <TextView
             android:id="@+id/txtSeventh"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginRight="10dp"
             android:gravity="right|center_vertical"
             android:text="Seventh"
             android:textAlignment="0"
             android:textDirection="rtl"
             android:textSize="20sp"
             android:layout_weight="0.01"
             android:textStyle="bold" />
     
 <TextView
     android:id="@+id/txtTotalSumName"
     android:layout_width="wrap_content"
     android:layout_height="fill_parent"
     android:layout_marginRight="5dp"
     android:gravity="right|center_vertical"
     android:text="جمع کل : " />

          <TextView
              android:id="@+id/txtSixth"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:layout_marginRight="5dp"
              android:layout_weight="0.02"
              android:gravity="right|center_vertical"
              android:text="Sixth"
              android:textDirection="rtl"
              android:textSize="20sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/PriceName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="فی : "
              android:textDirection="rtl"
              android:textSize="16sp" />

         

      </LinearLayout>

      <View
          android:layout_width="fill_parent"
          android:layout_height="13dip"
          android:layout_marginBottom="-2dp"
          android:background="#ffffff" />

</LinearLayout>
