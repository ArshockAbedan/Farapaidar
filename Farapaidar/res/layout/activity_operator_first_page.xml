<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OperatorFirstPage" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editTxtInOperatorFirstPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:ems="8"
            android:gravity="right"
            android:hint="@string/textboxHint"
            android:inputType="textPersonName" >
         </EditText>

        <TextView
            android:id="@+id/txtViewInOperatorFirstPage"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:scrollbars="vertical"
            android:text="اسم : "
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

   <Button
       android:id="@+id/btnSearchInOperatorFirstPage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/searchButton"
       android:onClick="SearchButtonFunc" />

    

        <ListView
            android:id="@+id/listViewOperators"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl" >

        </ListView>

</LinearLayout>
