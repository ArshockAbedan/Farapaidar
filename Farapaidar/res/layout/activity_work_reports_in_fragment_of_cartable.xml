<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F8F8F8"
    tools:context=".WorkReportsInFragmentOfCartableActivity" >

    <TextView
        android:id="@+id/TxtViewTitleOfWorkTitleInWorkReportsInFrgOfcartable"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
         android:text="موضوع کار : " />
    
     <TextView
        android:id="@+id/TxtViewWorkTitleInWorkReportsInFrgOfcartable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
         android:layout_below="@+id/TxtViewTitleOfWorkTitleInWorkReportsInFrgOfcartable"
        android:textSize="24sp"
        android:background="#68F5CCFF"
        android:text="sa" />
     
     
     <TextView
        android:id="@+id/TxtViewTitleOfPreviousReportInWorkReportsInFrgOfcartable"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TxtViewWorkTitleInWorkReportsInFrgOfcartable"
        android:layout_marginTop="5dp"
        android:gravity="right"
         android:text="متن گزارش کار : " />
    
    
    <TextView
        android:id="@+id/TxtViewPreviousReportInWorkReportsInFrgOfcartable"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_below="@+id/TxtViewTitleOfPreviousReportInWorkReportsInFrgOfcartable"
        android:layout_marginTop="5dp"
        android:background="#FFFFE0"
        android:textSize="20sp"
        android:text="sa \n sdpspd" />
    
     <TextView
         android:id="@+id/TxtViewTitleOfCurrentReportInWorkReportsInFrgOfcartable"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/TxtViewPreviousReportInWorkReportsInFrgOfcartable"
         android:layout_marginTop="5dp"
         android:gravity="right"
         android:text="گزارش جدید : " />

    <EditText
        android:id="@+id/editTxtCurrentReportInWorkReportsInFrgOfcartable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnInsertInWorkReports"
        android:layout_below="@+id/TxtViewTitleOfCurrentReportInWorkReportsInFrgOfcartable"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="top"
        android:background="#FFFFFF"
        android:hint="گزارش جدید را درج کنید..." >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnInsertInWorkReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
         android:layout_marginLeft="3dp"
        android:text="درج گزارش" />

</RelativeLayout>
